# Flask环境设置
DEBUG=False
LOG_LEVEL=INFO
FLASK_ENV=production

# 基本设置
SECRET_KEY=dev-key-12345

# 安全设置
ADMIN_TOKEN=admin-token-12345

# API基础路径设置（子路径部署时使用）
BASE_URL=
APPLICATION_ROOT=

# 文件存储设置
UPLOAD_FOLDER=uploads
OUTPUT_FOLDER=outputs
MAX_CONTENT_LENGTH=524288000  # 500MB

# 文件管理设置
FILE_RETENTION_MINUTES=60

# 音频处理设置
DEFAULT_MODEL=htdemucs
SAMPLE_RATE=44100
CHANNELS=2

# 服务器设置
HOST=0.0.0.0
PORT=5000